<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/customSpinnerItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/customSpinnerIcon"
        android:background="#310191"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivSpinnerLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_place_24" />

    <TextView
        android:id="@+id/tvSpinnerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="지역을 선택해주세요."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/customSpinnerIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#310191"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_arrow_drop_down_circle_24" />


    </LinearLayout>