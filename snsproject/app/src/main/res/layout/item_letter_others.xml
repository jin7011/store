<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="11dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_person_24"
        app:civ_border_color="@color/ultra_gray"
        app:civ_border_width="0.8dp" />

    <TextView
        android:id="@+id/other_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/iv"
        android:text="name"
        android:textColor="#333333"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/other_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/other_nick"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/iv"
        android:background="@drawable/others_bubble"
        android:maxWidth="250dp"
        android:padding="7dp"
        android:text="Hello android"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/other_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/other_msg"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/other_msg"
        android:text="13:35"
        android:textColor="@color/ultra_gray"
        android:textSize="9sp" />
</RelativeLayout>
 