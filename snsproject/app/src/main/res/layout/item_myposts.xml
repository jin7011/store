<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="13dp"
    android:layout_marginTop="7dp"
    android:layout_marginEnd="13dp"
    android:background="@drawable/get_outline_under"
    android:orientation="horizontal"
    android:paddingBottom="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_content_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:maxLines="1"
                android:text="TextView"
                android:textColor="@color/semi_black"
                android:textSize="16.5sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/contentT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="3dp"
                android:maxLines="1"
                android:text="TextView"
                android:textSize="12.5sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/data_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:maxLines="1"
                android:text="TextView"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/nicknameT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:text="TextView"
                android:textColor="@color/maincolor"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/whereT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/classicBlue"
            android:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom|end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/ic__485477009_like_78561" />

        <TextView
            android:id="@+id/goodNum_postItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="0"
            android:textColor="#5524B6"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/ic_commentnum_post" />

        <TextView
            android:id="@+id/commentNum_postItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="0"
            android:textColor="@color/pantone"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        tools:srcCompat="@tools:sample/avatars" />

</LinearLayout>