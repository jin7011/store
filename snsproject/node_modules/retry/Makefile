SHELL := /bin/bash

release-major: listenerSetLetters
	npm version major -m "Release %s"
	git push
	npm publish

release-minor: listenerSetLetters
	npm version minor -m "Release %s"
	git push
	npm publish

release-patch: listenerSetLetters
	npm version patch -m "Release %s"
	git push
	npm publish

.PHONY: listenerSetLetters release-major release-minor release-patch
